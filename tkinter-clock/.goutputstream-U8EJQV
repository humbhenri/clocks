#!/usr/bin/python
# -*- coding: utf-8 -*-

from Tkinter import Tk, Canvas, Frame, BOTH
import math
import time

WIDTH = 360
HEIGHT = 360

class Clock(Frame):
	def __init__(self, parent):
		Frame.__init__(self, parent)
		self.parent = parent
		self.initTime()
		self.initUi()
	
	def initTime(self):
		self.hourHand = time.localtime().tm_hour % 12
		self.minuteHand = time.localtime().tm_min
		self.secondHand = time.localtime().tm_sec

	def initUi(self):
		self.pack(fill=BOTH, expand=1)
		canvas = Canvas(self)
		radius = min(WIDTH, HEIGHT)/2.0
		centerX = WIDTH/2.0
		centerY = HEIGHT/2.0
		hourX = centerX + 0.3 * math.cos(self.toRadian(self.hourHand))
		hourY = centerY + 0.3 * math.sin(self.toRadian(self.hourHand))
		minuteX = centerX + 0.6 * math.cos(self.toRadian(self.minuteHand))
		minuteY = centerY + 0.6 * math.sin(self.toRadian(self.minuteHand))
		secondX = centerX + 0.75 * math.cos(self.toRadian(self.secondHand))
		secondY = centerY + 0.75 * math.sin(self.toRadian(self.secondHand))
		#canvas.create_oval(centerX, centerY, radius/2.0, radius/2.0, outline="black", fill="black")
		canvas.create_line(centerX, centerY, hourX, hourY, width=3)
		canvas.create_line(centerX, centerY, minuteX, minuteY, width=3)
		canvas.create_line(centerX, centerY, secondX, secondY, fill="red")
		canvas.pack(fill=BOTH, expand=1)

	def toRadian(self, x):
		return x * math.pi/30.0 - math.pi/2.0



if __name__=='__main__':
	root = Tk()
	app = Clock(root)
	root.geometry('%dx%d+300+300' % (WIDTH, HEIGHT))
	root.mainloop()  
	
